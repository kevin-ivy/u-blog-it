<div class="row mt-3 ml-4 mb-3 p-2 w-50 bg-dark mb-2 border border-dark rounded">
  <div class="col-12 text-info">
    <h2>Edit Your Post</h2>
  </div>
  <div class="col-12">
    <div class="form-group w-50 mt-3">
      <input type="text" id="post-title" name="post-title" value="{{post.title}}"/>
    </div>
    <div class="form-group">
      <textarea name="post-text" class="form-control" cols="100">{{post.post_text}}</textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-info mr-3" id="submit-edit">Submit Edits</button>
        <button type="submit" class="btn btn-outline-danger" id="delete-post">Delete Post</button>
    </div>
  </div>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>