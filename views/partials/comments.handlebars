<div class="comments w-100 m-1 p-2">
  {{#each this}}
  <section class="comment ml-4 mr-4 mb-3 border border-dark">
    <div class="meta text-info bg-dark p-2">
      {{user.username}} </br>
      {{format_date created_at}}
    </div>
    <div class="text-light p-3">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>